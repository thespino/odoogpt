<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="odoogpt_openai_interaction_view_list" model="ir.ui.view">
            <field name="name">odoogpt.openai.interaction.view.list</field>
            <field name="model">odoogpt.openai.interaction</field>
            <field name="arch" type="xml">
                <tree name="odoogpt_openai_model_tree" string="OdooGTP OpenAI Interactions" create="0" edit="0">
                    <field name="prompt" />
                    <field name="response" optional="hide" />
                </tree>
            </field>
        </record>

        <record id="odoogpt_openai_interaction_view_form" model="ir.ui.view">
            <field name="name">odoogpt.openai.interaction.view.form</field>
            <field name="model">odoogpt.openai.interaction</field>
            <field name="arch" type="xml">
                <form name="odoogpt_openai_model_form" create="0" edit="0">
                    <sheet>
                        <group colspan="2" string="Prompt" >
                            <label />
                            <field name="prompt" nolabel="1" />
                        </group>
                        <group colspan="2" string="Answer/Response" >
                            <label />
                            <field name="response" nolabel="1" />
                        </group>
                        <group colspan="2" string="Raw Response">
                            <label />
                            <field name="response_raw" class="font-monospace" nolabel="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="odoogpt_openai_interaction_act_window" model="ir.actions.act_window">
            <field name="name">OdooGPT OpenAI Interactions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoogpt.openai.interaction</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>